{
  "name": "serverless-template",
  "version": "0.0.0",
  "description": "Template serverless project",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production babel src --out-dir dist",
    "check-coverage": "nyc check-coverage --branches 100  --functions 100 --lines 100",
    "deploy": "yarn run build && node scripts/bundle && cd bundle && yarn install --prod && node -r dotenv/config ../node_modules/.bin/serverless deploy -vn && cd ../",
    "dev": "node -r dotenv/config ./node_modules/.bin/serverless offline",
    "dev-nocache": "nodemon -r dotenv/config ./node_modules/.bin/serverless offline --skipCacheInvalidation",
    "docs": "jsdoc -c jsdoc-config.json",
    "flow": "flow check",
    "lint": "eslint src/**/*.jsx src/**/*.js",
    "lint-fix": "eslint src/**/*.jsx src/**/*.js --fix",
    "test": "NODE_ENV=test nyc --report-dir=./coverage ava && yarn run check-coverage",
    "test-all": "NODE_ENV=test yarn run lint && yarn run flow && yarn run test"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-preset-blueflag": "^0.0.1",
    "babel-register": "^6.18.0",
    "enzyme": "^2.6.0",
    "eslint": "^3.11.1",
    "eslint-config-blueflag": "^0.3.0",
    "flow-bin": "^0.36.0",
    "fs-extra": "^1.0.0",
    "glob-all": "^3.1.0",
    "js-yaml": "^3.7.0",
    "jsdoc": "^3.4.3",
    "jsdoc-babel": "^0.2.1",
    "jsdonk": "^0.2.3",
    "nodemon": "^1.11.0",
    "nyc": "^10.0.0",
    "react": "^15.4.1",
    "serverless": "^1.2.1",
    "serverless-offline": "^3.4.1"
  },
  "dependencies": {
    "dotenv": "^2.0.0",
    "graphql": "^0.8.2"
  },
  "ava": {
    "require": "babel-register",
    "babel": {
      "presets": [
        "blueflag"
      ],
      "plugins": [
        "istanbul"
      ],
      "sourceMaps": "inline"
    },
    "files": [
      "src/**/*-test.js"
    ]
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "include": [
      "src/**"
    ],
    "exclude": [
      "src/**/*-test.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "extension": [
      ".js",
      ".jsx"
    ],
    "require": [
      "babel-register"
    ]
  }
}
